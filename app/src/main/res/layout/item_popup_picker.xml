<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_left_some"
        android:paddingTop="10dp"
        android:paddingRight="@dimen/margin_right_some"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_product_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:background="@drawable/icon_product" />

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_some"
                android:text="产品XXXXXXXXXXXXXXXXX"
                android:textColor="#ff333333"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="15dp"
            android:layout_height="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/gray_ee" />

    </RelativeLayout>
</LinearLayout>
