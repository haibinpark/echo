<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/rl_select"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:layout_marginTop="1dp">

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_left_some" />

    <TextView
        android:id="@+id/tv_left_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_left_some"
        android:layout_toRightOf="@id/iv_status"
        android:text="客户咨询"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_unit"
        android:layout_marginLeft="@dimen/margin_right_some"
        android:layout_toRightOf="@id/tv_left_value"
        android:visibility="gone"
        tool:visibility="visible"
        tool:text="期"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
