<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/wrap_33_13_single"
            android:layout_height="41dp"
            android:gravity="center"
            android:text="身份验证"
            android:textSize="17sp" />

        <View style="@style/divide_line_height1_width_match" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <TextView
                style="@style/wrap_33_15"
                android:text="请输入" />

            <TextView
                android:id="@+id/tv_phone"
                style="@style/wrap_33_15"
                android:textColor="@color/red_e3"
                tools:text="158*****254" />

            <TextView
                style="@style/wrap_33_15"
                android:text="收到的验证码" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp">

            <EditText
                android:id="@+id/et_code"
                style="@style/et_314_44_33_14_pdlr22"
                android:layout_width="match_parent"
                android:hint="请输入手机验证码"
                android:inputType="number"
                android:maxLength="8" />

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="100dp"
                android:layout_height="44dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/orange_main"
                android:textSize="12sp"
                android:visibility="gone" />

            <View
                style="@style/divide_grayf5_width1_height12"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="164dp"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_bottom_btn"
            style="@style/com_btn_match_44_orange_marlr28"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/selector_press_main_gray_buttom"
            android:text="立即还款" />

    </LinearLayout>
</LinearLayout>
